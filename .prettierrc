{
	"useTabs": true,
	"singleQuote": true,
	"arrowParens": "avoid",
	"semi": false,
	"tabWidth": 2,
	"bracketSpacing": true,
	"bracketSameLine": true,
	"singleAttributePerLine": true,
	"trailingComma": "none",
	"printWidth": 100,
	"plugins": ["prettier-plugin-svelte"],
	"overrides": [{ "files": "*.svelte", "options": { "parser": "svelte" } }]
}
